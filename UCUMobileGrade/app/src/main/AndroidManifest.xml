            android:name="edu.ucuccs.ucumobilegrade.ViewGrade"
            android:label="@string/app_name"

            />
        <activity
            android:name="edu.ucuccs.ucumobilegrade.MenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
